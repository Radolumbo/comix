{% extends "../layouts/default.twig" %}

{% block content %}
    <div class="container">
        <h1>{{data.comic.title}}</h1>
        <img src="{{data.comic.image.url}}" class="img-responsive">
        <div class="below-comic">
            <span>
                <a href="/comics/{% if data.comic and data.comic.comic_num > 1 %}{{data.comic.comic_num-1}}{% endif %}"><img src="http://res.cloudinary.com/du9xmm6rh/image/upload/v1495586633/left_fric0x.png" class="img-responsive arrow"></a>
                <span style='width:500px;display:inline-block'></span>
                <a href="/comics/{% if data.comic and data.comic.comic_num < data.max_comic_num %}{{data.comic.comic_num+1}}{% endif %}"><img src="http://res.cloudinary.com/du9xmm6rh/image/upload/v1495586633/right_xr6jwb.png" class="img-responsive arrow"></a>
            </span>
        </div>

    </div>
{% endblock %}
