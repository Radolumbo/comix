{% extends "../layouts/default.twig" %}

{% block content %}
    <div class="container">
        <h1>{{data.comic.title}}</h1>
        <div class="the-comic">
            <img src="{{data.comic.image.url}}" class="img-responsive img-comic">
        </div>
        <div class="below-comic">
            <span>
                {% if data.comic and data.comic.comic_num > 1 %}<a href="/comics/{{data.comic.comic_num-1}}"><img src="http://res.cloudinary.com/du9xmm6rh/image/upload/v1517541047/pencil-left_uiy2fs.gif" class="img-responsive arrow" id="arrow-left"></a>{% endif %}
                {% if data.comic and data.comic.comic_num < data.max_comic_num %}<a href="/comics/{{data.comic.comic_num+1}}"><img src="http://res.cloudinary.com/du9xmm6rh/image/upload/v1517541047/pencil-right_vuxbdy.gif" class="img-responsive arrow" id="arrow-right"></a>{% endif %}
            </span>
        </div>

    </div>

    <script>
    window.addEventListener("keydown", function (event) {
        if (event.defaultPrevented) {
            return; // Do nothing if the event was already processed
        }

        switch (event.key) {
            case "ArrowLeft":
                document.getElementById('arrow-left').click()
                break;
            case "ArrowRight":
                document.getElementById('arrow-right').click()
                break;
            default:
                return; // Quit when this doesn't handle the key event.
            }

            // Cancel the default action to avoid it being handled twice
            event.preventDefault();
        }, true);

    </script>
{% endblock %}
